<div class="container">
    <div class="row">
        <div id="bodyDiv" class="col-12">
            {{#each scrapedArticles}}
            <h2><a target="_blank" href={{url}}>{{headline}}</a></h2>
            <h3> By: {{author}}</h3>
            <br>
            <h4>Summary:</h4>
            <div>{{summary}}</div>
            <div>
                {{#if image}}
                <img src={{image}}>
                {{else}} <img src="https://myintuition.org/wp-content/uploads/2018/09/the-new-york-times-logo.jpg"
                    style="width: 200px">
                {{/if}}
            </div>
            <h5><a href="/articles/{{_id}}/comment">Add A Note!</a></h5>
            <br>
            <div id="noteDiv">
                {{#if note}}
                <h3>Notes:</h3>
                {{else}}
                {{/if}}
                {{#each note}}
                <div id={{_id}}>
                    <p>Subject: {{subject}}</p>
                    <p>Author: {{author}}</p>
                    <p>Body: {{body}}</p>
                </div>
                <br>
                <hr>
                <br>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
</div>